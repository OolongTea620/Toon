
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.to.t1.review.ReviewMapper">

	<select id="getList" parameterType="Pager" resultType="ReviewVO">
		SELECT*FROM eachep e LEFT JOIN review r
		ON e.toonNum=r.toonNum AND e.epNum=r.epNum
		WHERE e.eachEpNum=#{eachEpNum} ORDER BY r.revNum DESC
		LIMIT #{startRow},#{perPage}
	</select>
	
